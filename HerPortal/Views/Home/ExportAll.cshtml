@model HerPortal.Models.ExportAllViewModel
@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using HerPortal.BusinessLogic.Models.Enums
@using HerPortal.Models.Components
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Admin - Home Energy Retrofit Portal BETA";   
}


@section BeforeMain {
    @await Html.PartialAsync("Components/_Tabs", new NavTabsViewModel(NavTabsViewModel.Tab.ReferralFiles, UserRole.DesnzStaff))
}

<a asp-controller="CsvFile" asp-action="ExportAllCsvFile" asp-route-dataExportType="Last7Days">@(await Html.GovUkButton(new ButtonViewModel { Text = "Export Last 7 Days" }))</a>
<a asp-controller="CsvFile" asp-action="ExportAllCsvFile" asp-route-dataExportType="AllTime">@(await Html.GovUkButton(new ButtonViewModel { Text = "Export All" }))</a>
