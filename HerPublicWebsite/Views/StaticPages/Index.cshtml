@using HerPublicWebsite.Controllers
@{
    ViewBag.Title = "Home Upgrade Grant Questionnaire";
}

@section BeforeMain {
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">
            @Constants.SERVICE_NAME
        </h1>

        <p class="govuk-body">
            Find out whether you are eligible for the Home Upgrade Grant 2 scheme.
        </p>
        
        <p class="govuk-body">
            Homeowners eligible for the Home Upgrade Grant 2 will receive a home assessment to determine what
            improvements will best help them save money on energy bills.
        </p>
        
        <p class="govuk-body">
            Currently, this service only provides an indication of eligibility for the Home Upgrade Scheme. Further
            checks will be done by your local authority. 
        </p>
        
        <p class="govuk-body">
            For more information about other energy schemes and way to reduce your energy bills, see related content. 
        </p>
        
        <h2 class="govuk-heading-s">User this service to:</h2>
        
        <ul class="govuk-list govuk-list--bullet">
            <li>find out if you might be eligible for funding to improve your home</li>
            <li>find out your next steps </li>
            <li>receive guidance on other ways to get help</li>
        </ul>

        <h2 class="govuk-heading-s">Who can use this service</h2>
        <p class="govuk-body">
            Homeowners whose property is: 
        </p>
        <ul class="govuk-list govuk-list--bullet">
            <li>Located in England</li>
            <li>Does not have a gas boiler</li>
        </ul>
        
        <h2 class="govuk-heading-s">Information to know before you start</h2>
        <ul class="govuk-list govuk-list--bullet">
            <li>your household’s annual income, before tax</li>
            <li>whether your property has a gas boiler or not</li>
        </ul>
        
        <p class="govuk-body">
            Make sure you are able to provide accurate information about your household and property to receive an
            accurate result of whether you might be able to get the Home Upgrade Grant.  
        </p>
        
        <a href="@Url.Action(nameof(QuestionnaireController.Country_Get), "Questionnaire")" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
            </svg>
        </a>
    </div>
    
